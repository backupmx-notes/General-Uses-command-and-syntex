PHP with running version 7.0 or Above
============================================================
<?php
 	$servername = "localhost:3306";
 	$username = "test_db";
 	$password = "P4v9r%2s";
  $dbname = "finalEBASE";
// 	// Create connection
	$conn = mysqli_connect($servername, $username, $password, $dbname);
// // Check connection
	if (!$conn) {
        die("Connection failed: " . mysqli_connect_error());
}
echo "You Have Successfully Conneteded To Serveer $servername";
// // Close MySQL Connection from Serverlongtasks
// // Close MySQL Connection from Server
	mysql_close($conn);
?> 
