===================================================================================================
PHP with running version 5.5 or 5.6
============================================================
<?php
         $dbhost = 'localhost:3306';
         $dbuser = 'dbuser';
         $dbpass = 'dbpass';
// // Create connection
         $conn = mysql_connect($dbhost, $dbuser, $dbpass);
// // Check connection
	 if(! $conn ) {
            die('Could not connect: ' . mysql_error());
         }
echo 'You Have Successfully Conneteded To Serveer $dbhost';

// // Close MySQL Connection from Server
         mysql_close($conn);
?>
